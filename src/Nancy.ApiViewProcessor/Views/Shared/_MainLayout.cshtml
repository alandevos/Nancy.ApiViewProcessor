<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style>
        header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 45px;
            background-color: #36a9e1;
        }
        body {
            position: absolute;
            top: 50px;
        }
    </style>
</head>
<body>
    <header></header>
    <div>
        @RenderBody()
    </div>
</body>
</html>
